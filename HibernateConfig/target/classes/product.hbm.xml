<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.simplilearn">
	<class name="com.simplilearn.modal.Product" table="product">
		<id name="id" column="id">
			<generator class="increment" />
		</id>
		<property name="name" type="string" column="Name" />
		<property name="price" type="big_decimal" column="Unit_Price" />
		<property name="date_added" type="timestamp" column="date_added" />
	</class>
</hibernate-mapping>
